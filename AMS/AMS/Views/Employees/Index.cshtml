        function Updateddl() {
            $.ajax({

                type: "GET",
                url: "@Url.Action("GetDdlandListemp", "Employees")/" + Department.value,
            }).done(function (result) {

                $("#ddlemp").html(result);
                $("#Employees").bind("change", function () {
                    UpdateEmployeesByEmployee();

                });
                }).fail(function (e) { alert(e.responseText) });
