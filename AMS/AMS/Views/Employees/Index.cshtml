        function UpdateEmployeesByEmployee() {
            $.ajax({

                type: "GET",
                url: "@Url.RouteUrl("Default1", new { controller = "Employees", action = "Listemp" })/" + Employees.value + "/" + Department.value,
                }).done(function (result) {
