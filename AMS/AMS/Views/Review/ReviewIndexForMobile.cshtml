
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ReviewIndexForMobile</title>
    <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" />
    <style>
        button {
            width: 150px
        }
        div{
            font-size:1.5em
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top " style="height:6em">
        <div class="btn-group btn-group-lg" role="group" aria-label="Basic example" data-toggle="buttons" style="margin:auto">
            <button type="button" class="btn btn-secondary">請假審核</button>
            <button type="button" class="btn btn-secondary">加班審核</button>
            <button type="button" class="btn btn-secondary">打卡審核</button>
        </div>
    </nav>


    @model IEnumerable<AMS.Models.LeaveReviewViewModels>
    @using (Html.BeginForm("Edit2", "Review"))
    {
        <div class="form-group">
            <div class="row">
                <div class="col-12 col-md-2 ">
                    <button type="submit" class="btn btn-search md-3" style="background-color:#5DAC81;color:#FFFFFB;margin-left:10px">
                        <i class="icon-check"></i><span>
                            <strong>核准</strong>
                        </span>
                    </button>
                </div>
            </div>
        </div>
        <table id="basic-datatables" class="display table table-striped table-hover">

            <thead class="bg-primary text-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LeaveType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LeaveReason)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-light">
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LeaveType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LeaveReason)
                        </td>
                        <td>

                            <button class="btn btn-sm" type="button" style="background-color:#DAC9A6;color:#3A3226" onclick="ReviewPageAjax(('@Url.Action("Details", "Review" )/'+'@item.LeaveRequestID'),'details')">
                                <i class="icon-list"></i><span>
                                    <strong>明細</strong>
                                </span>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</body>
</html>

<script>
    (function () {
        $('.btn').click(function () {
            $('.btn').css('background-color', '');
            $(this).css('background-color', '#E16B8C')

        });

        $('table').DataTable({});
        
    })();
    
</script>
