@model IEnumerable<AMS.Models.LeaveReviewViewModels>
@using (Html.BeginForm("Edit2", "Review"))
{
    <div class="form-group">       
            <div class="row">
                <div class="col-12 col-md-2 ">                    
                        <button type="submit" class="btn btn-search md-3" style="background-color:#5DAC81;color:#FFFFFB;margin-left:10px">
                            <i class="icon-check"></i><span>
                                <strong>核准</strong>
                            </span>
                        </button>                                     
                </div>                
            </div>
        </div>
    <table id="basic-datatables" class="display table table-striped table-hover">

        <thead class="bg-primary text-light">
            <tr>
                <td>
                    @Html.CheckBox("CheckBox", false, new { id = "CheckAll", })
                    <span>
                        <strong>全選</strong>
                    </span>
                </td>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LeaveType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequestTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LeaveReason)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.ReviewStatusID)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.ReviewStatus)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-light">
                    <td>
                        @Html.CheckBox("Checkboxxx", false, new { style = "background-color:#6E75A4", id = "Checkboxxx", value = item.LeaveRequestID })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeaveType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeaveReason)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.ReviewStatusID)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.ReviewStatus)
                    </td>
                    <td>
                        <a href="@Url.Action("Details",new { id = item.LeaveRequestID } )" class="btn btn-sm" style="background-color:#DAC9A6;color:#3A3226">
                            <i class="icon-list"></i>
                            <span>
                                <strong>明細</strong>
                            </span>
                        </a>
                        @*@Html.ActionLink("Edit", "Edit", new { id=item.LeaveRequestID }) |*@
                        @*@Html.ActionLink("Details", "Details", new { id = item.LeaveRequestID }, new { @class = "btn btn-outline-primary" })*@
                        @*@Html.ActionLink("Delete", "Delete", new { id=item.LeaveRequestID })*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

