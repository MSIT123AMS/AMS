
@{
    ViewBag.Title = "AjaxView";
}

<h2>AjaxView</h2>
@Html.DropDownList("Customers", null, "-- 請選擇 --", new { @class = "col-sm-11 form-control" })
<div id="Container"></div>

@section scripts{
    <script>
        $("#Customers").bind("change", function () {
            UpdateOrders();
        });

        function UpdateOrders() {

            $.ajax({
                type: "Get",
                @*url: "@Url.Action("Index3","Review")/" + Customers.value*@
                url:"/Review/Index3/1"
            }).done((result) => {
                $("#Container").html(result);


            }).fail((e) => {
                $("#Container").html(e);



            });
        }
    </script>
}
